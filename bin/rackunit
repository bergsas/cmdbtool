#!/bin/bash
cd "`dirname $0`"
export PYTHONPATH=..

for n in "$@"
do
  result="`./cmdbtool -o item.serial name==$n`"
  if [ -z "$result" ]
  then
    result="`./cmdbtool -o item.serial item.serial==$n`"
  fi

  if [ -z "$result" ]
  then
    echo "$n: No hits" 1>&2
    continue
  fi

  ./cmdbtool -r rackunit -o rack.name,ruid,item.serial,item.itemmodel.name "item.serial==$result" | while read
  do
    echo "$n: $REPLY"
  done
done

